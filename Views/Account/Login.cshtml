@model LoginViewModel;

@{ 
    ViewData["Title"] = "Login";
}

    <div class="container m-auto" style="background-color: white;">
        <form enctype="multipart/form-data" asp-controller="account" asp-action="login" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="@Model.returnUrl" value="@ViewData["url"]" />
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        Remember me
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>

        </form>
    </div>